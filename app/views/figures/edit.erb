<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Edit <%= @figure.name %></title>
  </head>
  <body>

    <form action="/figures" method="post">
      <input id="hidden" type="hidden" name="_method" value="patch">
      <input type="hidden" name="figure[id]" value="<%= @figure.id %>">
      <h3>Edit <%= @figure.name %>:</h3>

      <p>Name: <input id="figure_name" type="text" name="figure[name]"></p>

      <h2>Titles</h2>

      <% @titles.each do |title| %>
        <p><input id="title_<%= title.id %>" type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" <% if @figure.titles.include?(title) %>checked<% end %>><%= title.name %></p>
      <% end %>

      <p>Create New Title: <input id="new_title" type="text" name="title[name]"></p>

      <h2>Landmarks</h2>

      <% @landmarks.each do |landmark| %>
        <p><input id="landmark_<%= landmark.id %>" type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" <% if @figure.landmarks.include?(landmark) %>checked<% end %>><%= landmark.name %></p>
      <% end %>

      <p>Create New Landmark:</p>

      <p>Name: <input id="new_landmark" type="text" name="new_landmark[name]"></p>
      <p>Year Completed: <input type="text" name="new_landmark[year_completed]"></p>

      <input type="submit" value="Edit Figure">

    </form>

  </body>
</html>
